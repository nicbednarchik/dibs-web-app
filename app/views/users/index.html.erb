<div class="max-w-screen-md mx-auto px-4 py-6">
  <h1 class="text-2xl font-semibold text-[#A85B5A] mb-4">Search users</h1>

  <%= form_with url: users_path, method: :get, local: true, class: "flex gap-2" do %>
    <input type="text" name="q" value="<%= h(@q) %>" placeholder="Search by username"
           class="flex-1 rounded-full border border-zinc-300 px-4 py-2 focus:outline-none focus:ring-2 focus:ring-[#A85B5A]/40" />
    <button class="rounded-full bg-[#A85B5A] text-white px-4 py-2 shadow hover:opacity-95">Search</button>
  <% end %>

  <div class="mt-6 space-y-2">
    <% if @q.present? && @users.empty? %>
      <p class="text-sm text-zinc-600">No users found for “<%= h(@q) %>”.</p>
    <% end %>

    <% @users.each do |user| %>
      <div class="flex items-center justify-between rounded-2xl bg-white px-4 py-3 shadow">
        <div>
          <div class="font-medium">@<%= user.username %></div>
          <% if user.first_name.present? %>
            <div class="text-xs text-zinc-600"><%= user.first_name %></div>
          <% end %>
        </div>
        <%= link_to "View profile", user_path(user),
              class: "inline-flex items-center rounded-full bg-white px-3 py-1.5 text-[#A85B5A] shadow-md hover:bg-[#A85B5A] hover:text-white hover:shadow-lg transition" %>
      </div>
    <% end %>
  </div>
</div>

